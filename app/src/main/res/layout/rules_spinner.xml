<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/spinnerframeLayout"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:clickable="false"
    android:foregroundGravity="center"
    app:layoutDescription="@xml/rules_spinner_scene"
    app:layout_anchorGravity="center">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="328dp"
        android:layout_height="118dp"
        android:clickable="false"
        android:contentDescription="Image Of Spinner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bottom_sheet_background" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="259dp"
        android:layout_height="44dp"
        android:clickable="false"
        android:gravity="center"
        android:text="Rule Roll"
        android:textColor="#F10A0A"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />
</androidx.constraintlayout.motion.widget.MotionLayout>